@model IEnumerable<DataModelLayer.Product>
@{
    ViewBag.Title = "Home";
    Layout = "~/Views/Admins/_LayoutAdmin.cshtml";
}

<h2>Hello Admin</h2>
<div>
    <table id="productTable" class="table table-bordered table-hover">
        <thead>
            <tr>
                <th>Product Id</th>
                <th>Product Name</th>
                <th>Product Type</th>
                <th>Product Price</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var product in Model)
            {
                <tr>
                    <td>@product.ProductName</td>
                    <td>@product.ProductName</td>
                    <td>@product.ProductName</td>
                    <td>@product.ProductName</td>
                </tr>

            }
        </tbody>

    </table>
</div>
@section scripts
{
    <script>
        $(document).ready(function () {
            $('#productTable').DataTable()
        });
    </script>    
}


