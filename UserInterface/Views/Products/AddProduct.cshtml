@model UserInterface.ViewModel.ProductViewModel
@{
    ViewBag.Title = "AddProduct";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link href="~/Content/ProductSheet.css" rel="stylesheet" />


@using (Html.BeginForm("Save", "Products"))
{
<div class="containerbox">
    <h2>AddProduct</h2>
    <div class="form-group box">
        @Html.LabelFor(m => m.product.ProductName)
        @Html.TextBoxFor(m => m.product.ProductName, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.product.ProductName)
    </div>

    <div class="form-group box ">
        @Html.LabelFor(m => m.product.ProductPrice)
        @Html.TextBoxFor(m => m.product.ProductPrice, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.product.ProductPrice)
    </div>

    <div class="form-group box">
        <label>Product Description</label>
        @Html.TextBoxFor(m => m.product.ProductDescription, new { @class = "form-control" })

    </div>

    <div class="form-group box">
        <label> Product Category</label>
        @Html.DropDownListFor(m => m.product.ProductCategoryId, new SelectList(Model.productCategories, "ProductCategoryId", "ProductCategoryType"), "Select Product Type", new { @class = "form-control" })
    </div>
    <label>Size Wise Quantity</label>
    <div class="form-group size-box">
        @Html.LabelFor(m => m.productSize.S)
        @Html.TextBoxFor(m => m.productSize.S, new { @class = "form-control" })

    </div>
    <div class="form-group size-box">
        @Html.LabelFor(m => m.productSize.M)
        @Html.TextBoxFor(m => m.productSize.M, new { @class = "form-control" })

    </div>
    <div class="form-group size-box">
        @Html.LabelFor(m => m.productSize.L)
        @Html.TextBoxFor(m => m.productSize.L, new { @class = "form-control" })

    </div>

    <div class="form-group size-box">
        @Html.LabelFor(m => m.productSize.Xl)
        @Html.TextBoxFor(m => m.productSize.Xl, new { @class = "form-control" })

    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.product.ProductAdminNotification)
        @Html.TextBoxFor(m => m.product.ProductAdminNotification, new { @class = "form-control" })

    </div>

    @Html.HiddenFor(m => m.product.ProductId);
    @Html.AntiForgeryToken()
    <div>
        <input type="submit" class=" btn btn-primary" />
    </div>
</div>
}



